# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /home                       controllers.Application.index(item: Int ?= 0)
POST    /                           controllers.Application.formHandler(id: Int ?= 0)
GET     /find                       controllers.Application.find(name: String)
GET     /                           controllers.Application.getAll(item: Int ?= 0, isNew: Option[String])
GET     /delete                     controllers.Application.deleteItem(id: Int)
GET     /db/delete                  controllers.Application.deleteFromDB(id: Int)
GET     /search                     controllers.Application.searchPage
POST    /search                     controllers.Application.searchFormHandler(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)